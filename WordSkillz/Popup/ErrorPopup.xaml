<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordSkillz.Popup.ErrorPopup">
    <Frame CornerRadius="20"
           WidthRequest="350"
           HeightRequest="160"
           BorderColor="#ebecf0">
        <VerticalStackLayout>
            <Label Text="error"
                   FontAttributes="Bold"
                   FontSize="22" />
            <Label Text="there are no words in this category"
                   FontSize="18"
                   Margin="0,10,0,10" />
            <HorizontalStackLayout HorizontalOptions="End"
                                   VerticalOptions="End">
                <Button x:Name="BOk"
                        Clicked="BOk_Clicked"
                        Text="ok"
                        FontAttributes="Bold"
                        TextColor="{StaticResource Secondary}"
                        CornerRadius="20"
                        WidthRequest="80"
                        HeightRequest="45"
                        FontSize="22" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Frame>
</ContentView>
