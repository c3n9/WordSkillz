<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordSkillz.Popup.CongratulatePopup">
    <Frame CornerRadius="20"
           WidthRequest="350"
           HasShadow="False"
           HeightRequest="160"
           Background="{AppThemeBinding Light=White, Dark={StaticResource Black}}"
           BorderColor="{AppThemeBinding Light=White, Dark={StaticResource Black}}">
        <VerticalStackLayout>
            <Label Text="congratulate"
                   FontAttributes="Bold"
                   FontSize="22" />
            <Label Text="you've looked all the words!"
                   FontSize="18"
                   Margin="0,10,0,5" />
            <HorizontalStackLayout HorizontalOptions="End"
                                   VerticalOptions="End">
                <Button x:Name="BOk"
                        Clicked="BOk_Clicked"
                        Text="restart"
                        FontAttributes="Bold"
                        TextColor="{StaticResource Secondary}"
                        CornerRadius="20"
                        WidthRequest="100"
                        HeightRequest="45"
                        FontSize="22" />
            </HorizontalStackLayout>
        </VerticalStackLayout>

    </Frame>
</ContentView>
