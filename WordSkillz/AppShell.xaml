<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WordSkillz.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WordSkillz"
    xmlns:pages="clr-namespace:WordSkillz.Pages"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Main"
                Route="Main">
        <ShellContent ContentTemplate="{DataTemplate pages:MainPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Words"
                Route="AddWordsPage">
        <ShellContent ContentTemplate="{DataTemplate pages:AddWordsPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Option"
                Route="OptionPage">
        <ShellContent ContentTemplate="{DataTemplate pages:OptionPage}" />
    </FlyoutItem>
</Shell>
