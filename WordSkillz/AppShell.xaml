<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="WordSkillz.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:WordSkillz"
       xmlns:pages="clr-namespace:WordSkillz.Pages"
       FlyoutItem.IsVisible="False"
       FlyoutHeaderBehavior="Default">

    <TabBar>
        <Tab Title="Главная"
             Icon="home.svg"
             Route="MainPage">
            <ShellContent ContentTemplate="{DataTemplate pages:MainPage}" />
        </Tab>
        <Tab Title="Профиль"
             Icon="user.svg"
             Route="AccountPage">
            <ShellContent ContentTemplate="{DataTemplate pages:AccountPage}" />
        </Tab>
    </TabBar>
</Shell>
