<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordSkillz.Pages.AccountPage"
             xmlns:fa="clr-namespace:UraniumUI.Icons.FontAwesome;assembly=UraniumUI.Icons.FontAwesome"
             Title="WordSkillz">
    <!--<ContentPage.ToolbarItems>
        <ToolbarItem Text="🖍️" 
                     Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>-->
    <StackLayout Padding="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Frame CornerRadius="80"
                   HasShadow="False"
                   WidthRequest="150"
                   HeightRequest="150">
                <Image Source="user.png"
                       HeightRequest="100"
                       WidthRequest="100"
                       HorizontalOptions="Center" />
            </Frame>
            <StackLayout Grid.Column="1"
                         VerticalOptions="Center">
                <Label Text="c3n9"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalOptions="Start" />
                <Label Text="c3n9@example.com"
                       FontSize="18"
                       HorizontalOptions="Start" />
            </StackLayout>
        </Grid>
        <Label Text="My friends"
               FontSize="24"
               HorizontalOptions="Start"
               Margin="20,10,0,0" />
        <Label Text="My stats"
               FontSize="24"
               HorizontalOptions="Start"
               Margin="20,10,0,0" />
        <Label Text="Exit"
               FontSize="24"
               HorizontalOptions="Start"
               Margin="20,10,0,0" />
        <Button Text="Login"
                x:Name="BLogin"
                Margin="0,120,0,0"
                Clicked="BLogin_Clicked" />
    </StackLayout>

</ContentPage>