<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordSkillz.Pages.AllWordsInCategoryPage"
             Title="WordSkillz">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="New word"
                     Clicked="BAddWords_Clicked" />
    </ContentPage.ToolbarItems>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <ScrollView Grid.Row="0">
            <ListView x:Name="LVWords"
                      Margin="20"
                      HasUnevenRows="True"
                      ItemsSource="{Binding Words}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <SwipeView SwipeEnded="OnSwipeEnded"
                                       SwipeChanging="OnSwipeChanging">
                                <SwipeView.RightItems>
                                    <SwipeItems>
                                        <SwipeItemView>
                                            <SwipeItemView.Content>
                                                <Grid BackgroundColor="Transparent">
                                                    <Grid.Background>
                                                        <LinearGradientBrush StartPoint="0,0"
                                                                             EndPoint="1,0">
                                                            <GradientStop Color="#FF0000"
                                                                          Offset="0" />
                                                            <GradientStop Color="#e60000"
                                                                          Offset="1" />
                                                        </LinearGradientBrush>
                                                    </Grid.Background>
                                                </Grid>
                                            </SwipeItemView.Content>
                                        </SwipeItemView>
                                    </SwipeItems>
                                </SwipeView.RightItems>
                                <Frame CornerRadius="20"
                                       Margin="20"
                                       BorderColor="#512BD4">
                                    <Grid>
                                        <Label Text="{Binding OriginalWord}"
                                               HorizontalOptions="Start"
                                               VerticalOptions="Center"
                                               TextColor="#512BD4" />
                                        <Label Text="{Binding TranslatedWord}"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               TextColor="#512BD4" />
                                    </Grid>
                                </Frame>
                            </SwipeView>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>
    </Grid>
</ContentPage>