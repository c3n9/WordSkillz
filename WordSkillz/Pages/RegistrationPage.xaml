<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordSkillz.Pages.RegistrationPage"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             Title="Registration">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Frame CornerRadius="250"
                   Margin="0,20,0,20"
                   HeightRequest="250"
                   HasShadow="False"
                   WidthRequest="250">
                <Image Aspect="Fill"
                       x:Name="SelectedPhoto"
                       Source="user.png"
                       HeightRequest="250"
                       WidthRequest="250">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizerImage_Tapped"/>
                    </Image.GestureRecognizers>
                </Image>
            </Frame>
            <material:TextField Title="name"
                                Keyboard="Text"
                                AllowClear="True"
                                x:Name="NameEntry"
                                FontSize="24" />
            <material:TextField Title="email"
                                Keyboard="Email"
                                AllowClear="True"
                                x:Name="EmailEntry"
                                FontSize="24" />
            <material:TextField Title="password"
                                AllowClear="True"
                                IsTextPredictionEnabled="True"
                                IsPassword="True"
                                x:Name="PasswordEntry"
                                FontSize="24"
                                Keyboard="Text" />
            <material:TextField Title="phone"
                                AllowClear="True"
                                x:Name="PhoneNumberEntry"
                                Keyboard="Telephone"
                                FontSize="24" />
            <Button Text="Register"
                    Margin="0,20,0,0"
                    FontSize="24"
                    Clicked="BRegister_Clicked"/>
            <Label Text="Registered? Log in."
                   TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryNight}}"
                   Margin="0,20,0,0"
                   TextDecorations="Underline"
                   HorizontalOptions="Center"
                   FontSize="20">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer  Tapped="TapGestureRecognizerLogin_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>