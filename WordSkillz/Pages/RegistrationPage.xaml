<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordSkillz.Pages.RegistrationPage"
             Title="RegistrationPage">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Frame CornerRadius="10"
                   Margin="0,20,0,0">
                <Image Aspect="AspectFill"
                       x:Name="SelectedPhoto"
                       HeightRequest="200">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_1" />
                    </Image.GestureRecognizers>
                </Image>
            </Frame>
            <Entry Placeholder="Name"
                   x:Name="NameEntry" />
            <Entry Placeholder="Email"
                   Keyboard="Email"
                   x:Name="EmailEntry" />
            <Entry Placeholder="Password"
                   IsPassword="True"
                   x:Name="PasswordEntry" />
            <DatePicker x:Name="DateOfBirthPicker"
                        Format="MM/dd/yyyy"
                        Date="{Binding DateOfBirth}"
                        Margin="0,10,0,0" />
            <Entry Placeholder="Gender"
                   x:Name="GenderEntry" />
            <Entry Placeholder="Country"
                   x:Name="CountryEntry" />
            <Entry Placeholder="Address"
                   x:Name="AddressEntry" />
            <Entry Placeholder="Phone Number"
                   Keyboard="Telephone"
                   x:Name="PhoneNumberEntry" />
            <Button Text="Register"
                    Clicked="Register_Clicked"
                    Margin="0,20,0,0" />
            <Label Text="Registered? Log in."
                   TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryNight}}"
                   Margin="0,20,0,0"
                   TextDecorations="Underline"
                   HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                </Label.GestureRecognizers>
            </Label>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
