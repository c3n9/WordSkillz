<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordSkillz.Pages.MiniGamePages.WordCardsPage"
             Title="WordSkillz"
             Disappearing="ContentPage_Disappearing">
    <Grid VerticalOptions="Center"
           HorizontalOptions="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackLayout>
            <ProgressBar x:Name="ProgressBar"
                         VerticalOptions="Start"
                         Progress="0"
                         Margin="20,10,20,10" />
            <StackLayout Orientation="Horizontal"
                         VerticalOptions="Start"
                         HorizontalOptions="Center">
                <Label Text="Words: "
                       FontSize="20"
                       VerticalOptions="Center" />
                <Label x:Name="WordsLeftLabel"
                       FontSize="20"
                       VerticalOptions="Center" />
                <Label Text=" / "
                       FontSize="20"
                       VerticalOptions="Center" />
                <Label x:Name="TotalWordsLabel"
                       FontSize="20"
                       VerticalOptions="Center" />
            </StackLayout>
        </StackLayout>
        
        <ListView x:Name="LVWordÐ¡ards"
                  Margin="20"
                  Grid.Row="1"
                  VerticalOptions="Center"
                  HasUnevenRows="True"
                  ItemsSource="{Binding Words}"
                  SeparatorVisibility="None"
                  VerticalScrollBarVisibility="Never">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <SwipeView SwipeEnded="SwipeView_SwipeEnded">
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItemView>
                                        <SwipeItemView.Content>
                                            <Grid BackgroundColor="Transparent">
                                                <Image Source="checkmark.png"
                                                       VerticalOptions="Center"
                                                       HorizontalOptions="End"
                                                       Margin="10,0,10,0"
                                                       HeightRequest="50"
                                                       WidthRequest="50" />

                                            </Grid>
                                        </SwipeItemView.Content>
                                    </SwipeItemView>
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <SwipeView.LeftItems>
                                <SwipeItems>
                                    <SwipeItemView>
                                        <SwipeItemView.Content>
                                            <Grid BackgroundColor="Transparent">
                                                <Image Source="crossmark.png"
                                                       VerticalOptions="Center"
                                                       HorizontalOptions="End"
                                                       Margin="10,0,10,0"
                                                       HeightRequest="50"
                                                       WidthRequest="50" />
                                            </Grid>
                                        </SwipeItemView.Content>
                                    </SwipeItemView>
                                </SwipeItems>
                            </SwipeView.LeftItems>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Frame x:Name="MainFrame"
                                       CornerRadius="20"
                                       Margin="20">
                                    <Grid>
                                        <Label Text="{Binding OriginalWord}"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               FontSize="45"
                                               Margin="0,60" />
                                    </Grid>
                                </Frame>
                                <Frame CornerRadius="20"
                                       Margin="20"
                                       Grid.Row="1">
                                    <Grid>
                                        <Label Text="{Binding TranslatedWord}"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               FontSize="45"
                                               Margin="0,60" />
                                    </Grid>
                                </Frame>
                            </Grid>
                        </SwipeView>

                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </Grid>
</ContentPage>